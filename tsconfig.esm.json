{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "./dist",
    "sourceMap": true,
    "stripInternal": true,
    "target": "es5",
    "types": [
      "node"
    ]
  },
  "exclude": [
    "./src/**/*.spec.ts"
  ],
  "extends": "./tsconfig.json",
  "files": [
    "./src/index.ts"
  ]
}
